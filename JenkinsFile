pipeline {
  agent any
  triggers {
    cron('H 5 * * *')  // Runs daily at 5 AM
  }
  stages {
    stage('Checkout') {
      steps {
        git 'https://github.com/Namratha899/email-bounce-monitor.git'
      }
    }
    stage('Setup Python Env and Install Dependencies') {
      steps {
        sh '''
          python3 -m venv venv
          . venv/bin/activate
          pip install --upgrade pip
          pip install -r requirements.txt
        '''
      }
    }
    stage('Run Script') {
      steps {
        sh '''
          . venv/bin/activate
          python main.py
        '''
      }
    }
  }
  post {
    failure {
      mail to: "namratha3004@gmail.com",
           subject: "Bounce Monitor Job Failed",
           body: "The Bounce Monitor Jenkins job has failed. Please check logs."
    }
  }
}
